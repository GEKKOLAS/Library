@model AuthorListViewModel

@{
    ViewData["Title"] = "Authors";
}

<!DOCTYPE html>

<body>
    <div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add New Author
        </button>
    </div>
    @foreach (var author in Model.Authors)
    {
        <div class="container text-center g-col-6 g-col-md-4 g-col-lg-3">
            <div class="row">
                <div class="col">
                    @author.Name
                </div>
                <div class="col g-col-6 g-col-md-4 g-col-lg-3">
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">

                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form class="was-validated" asp-action="Create" method="post" role="form">
                                        <div class="mb-3">
                                            <label asp-for="Authors" class="form-label">Name</label>
                                            <input asp-for="Name" type="name" class="form-control" id="exampleInputEmail1"
                                                aria-describedby="emailHelp" required>
                                            <div class="invalid-feedback">
                                                Enter Author Name
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <div class="col-m-offset-2 col-m-offset-2 md-5">
                                                <input type="submit" class="btn btn-primary" value="Save Author" />
                                            </div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</body>

</html>